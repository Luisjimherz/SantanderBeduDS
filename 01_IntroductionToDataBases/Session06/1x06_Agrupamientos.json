[{$match: {           //filtra Houses y bedrooms
  property_type: "House",
  bedrooms: {$gte: 1}
}
}, {$addFields: {     //a√±ade nuevos campos
  costo_recamara: {$divide: ["$price", "$bedrooms"]}
}
}, {$group: {         //agrupa
  _id: null,          //por documentos
  recamaras: {
    $sum: 1
  },
  total: {
    $sum: "$costo_recamara"
  }
}}, {$addFields: {
  costo_promedio: {$divide: ["$total", "$recamaras"]}
}}]
